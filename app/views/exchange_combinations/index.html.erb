<div class="container">

  <h1>Exchange Combinations</h1>

  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Base</th>
      <th>Target</th>
      <th>Amount</th>
      <th>Wait</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @exchange_combinations.each do |exchange_combination| %>
        <tr>
          <td><%= exchange_combination.base %></td>
          <td><%= exchange_combination.target %></td>
          <td><%= exchange_combination.amount %></td>
          <td><%= exchange_combination.wait %></td>
          <% if exchange_combination.user == current_user %>
              <td>You</td>
          <% else %>
              <td><%= exchange_combination.user.email %></td>
          <% end %>
          <td><%= link_to 'Show', exchange_combination %></td>
          <% if exchange_combination.user == current_user %>
          <td><%= link_to 'Edit', edit_exchange_combination_path(exchange_combination) %></td>
          <td><%= link_to 'Destroy', exchange_combination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <% if current_user %>
    <%= link_to 'New Exchange Combination', new_exchange_combination_path %>
  <% end %>
</div>
