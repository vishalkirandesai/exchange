<%= form_with(model: exchange_combination, local: true) do |form| %>
  <% exchange_combination.errors.full_messages.each do |value| %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= value %>
      </div>
  <% end %>

  <div class="form-group">
    <%= form.label :base %>
    <%= form.collection_select :base, Currency::LIST, :to_s, :to_s,
                               include_blank: true, class: 'form-control'
    %>
  </div>

  <div class="form-group">
    <%= form.label :target %>
    <%= form.collection_select :target, Currency::LIST, :to_s, :to_s,
                            include_blank: true, class: 'form-control'
    %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :exchange_combination_amount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :wait %>
    <%= form.text_field :wait, id: :exchange_combination_wait, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
